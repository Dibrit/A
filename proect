            a = input()
            if a == "1":
                self.point -= d
            else:
                self.cas()
        if self.point >= d:
            self.point -= d
        if d == 172:
            self.df()
        print("на что ставите?1 - красный 2 белый 3 зелёный(0)")
        s = True
        b = 0
        while s:
            c = pygame.Color("red")
            n = (200, 500)
            pygame.draw.circle(h, c, n, 50, 0)
            c = pygame.Color("black")
