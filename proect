                    с = pygame.Color("green")
                pygame.draw.circle(h, c, n, 10, 0)
                pygame.display.flip()
                p.tick(50)
            self.cas()


class Board(Games):
    def __init__(self, t, f):
        self.t = t
        self.f = f
        self.b = [[0] * t for i in range(f)]
        self.g = 10
        self.tp = 10
        self.s = 30

    def render(self, h):
        for y in range(self.f):
            for x in range(self.t):
                pygame.draw.rect(h, pygame.Color(255, 255, 255),
                                 (x * self.s + self.g, y * self.s + self.tp,
                                  self.s,
                                  self.s), 1)



    def get_cell(self, m):
        x = (m[0] - self.g) // self.s
        y = (m[1] - self.t) // self.s
        if x < 0 or x >= self.t or y < 0 or y >= self.f:
            return None
        return x, y

    def get_click(self, m, hgg):
        self.nm = 0
        self.hgg = hgg
        cell = self.get_cell(m)
        if cell:
            self.on_click(cell)


class Minesweeper(Board, Games):
    def __init__(self, t, f, n):
        self.ljf = 0
        print("выберете размер")
        a = int(input())
        if a == 1:
            self.k = 20
            t = 10
            f = 10
        elif a == 2:
            self.k = 15
            t = 15
            f = 15
        elif a == 3:
            t = 20
            f = 20
            self.k = 10
        super().__init__(t, f)
        self.b = [-1] * f
        for i in range(f):
            self.b[i] = [-1] * t
        i = 0
        while i < n:
            x = randint(0, self.t - 1)
            y = randint(0, self.f - 1)
            if self.b[y][x] == -1:
                self.b[y][x] = 10
                i += 1

    def cl(self, p):
        x = (p[0] - self.g) // self.s
        y = (p[1] - self.d) // self.s
        if x < 0 or x >= self.f or y < 0 or y >= self.t:
            a = ""
        else:
            a = x, y
        if len(a) > 0:
            return(a)

    def open_cell(self, cell):
        x, y = cell
        nmm = 0
        if self.b[y][x] == 10:
            if self.hgg == 1:
                a = pygame.sprite.Group()
                g = Hero(a)
                с = pygame.time.Clock()
                p = 0
                while p < 700:
                    p += 1
                    for i in pygame.event.get():
                        if i.type == pygame.QUIT:
                            p = 200
                    g.updategh()
                    h.fill(pygame.Color("black"))
                    a.draw(h)
                    pygame.display.flip()
                    с.tick(200)
                self.spr()
                self.ljf = 0
            elif self.hgg == 0:
                print("Бомба обезврежена")
                self.ljf += 1
                self.k -= 1
                self.nm = 1
                nmm = 1
                print("Дефузов осталось ", self.k)
        if self.hgg == 0:
                if self.nm == 0:
                    print("Там небыло бомбы")
                    self.nm = 1
                    self.k -= 1
                    print("Дефузов осталось ", self.k)
        if self.ljf == 10:
            print("вы победили")
            self.spr()
        if self.k == 0:
            a = pygame.sprite.Group()
            g = Hero(a)
            с = pygame.time.Clock()
            s = True
            while s:
                for i in pygame.event.get():
                    if i.type == pygame.QUIT:
                        s = False
                g.updategh()
                h.fill(pygame.Color("black"))
                a.draw(h)
                pygame.display.flip()
                с.tick(200)
            print("Вы проиграли")
            self.spr()
        s = 0
        for dy in range(-1, 2):
            for dx in range(-1, 2):
                if x + dx < 0 or x + dx >= self.t or y + dy < 0 or y + dy >= self.f:
                    continue
                if self.b[y + dy][x + dx] == 10:
                    s += 1
        if nmm == 0:
            self.b[y][x] = s
        elif nmm == 1:
            self.b[y][x] = 'б'
        if s == 0:
            for dy in range(-1, 2):
                for dx in range(-1, 2):
                    if x + dx < 0 or x + dx >= self.t or y + dy < 0 or y + dy >= self.f:
                        continue
                    if self.b[y + dy][x + dx] == -1:
                        self.open_cell((x + dx, y + dy))

    def open_board(self):
        for y in range(self.f):
            for x in range(self.t):
                self.open_cell((x, y))

    def on_click(self, c):
        self.open_cell(c)

    def render(self, g):
        for y in range(self.f):
            for x in range(self.t):
                if self.b[y][x] == "б" or self.b[y][x] >= 0 and self.b[y][x] != 10:
                    font = pygame.font.Font(None, self.s - 6)
                    text = font.render(str(self.b[y][x]), 1, (100, 255, 100))
                    h.blit(text, (
                        x * self.s + self.g + 3, y * self.s + self.tp + 3))

                pygame.draw.rect(h, pygame.Color(255, 255, 255),
                                 (x * self.s + self.g, y * self.s + self.tp,
                                  self.s,
                                  self.s), 1)


